<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%=data.menu2%></title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/assets/lib/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/assets/lib/viewer/viewer.min.css"/>
    <link rel="stylesheet" href="/assets/css/common/style.css" media="all">
    <link rel="stylesheet" href="<%= data.cssPath %>" media="all">
    <%if(data.projectName == 'jcddjs'){%>
    <style type="text/css">
        .layui-btn-normal {
            background-color: rgb(240,40,60)!important;
        }
        .layui-layer-btn0{
            background-color: rgb(240,40,60)!important;
            border-color: rgb(240,40,60)!important;
        }
        .layui-layer-title{
            background-color: #f88e85!important;
        }
        .layui-laypage .layui-laypage-curr .layui-laypage-em{
            background-color: lightpink!important;
        }
    </style>
    <%}%>
    <%if(data.projectName == 'djzhb'){%>
    <style type="text/css">
        .layui-laypage .layui-laypage-curr .layui-laypage-em{
            background-color: lightskyblue!important;
        }
        .layui-btn-danger {
            background-color: lightblue!important;
        }
    </style>
    <%}%>

</head>
<body>
<div class="layui-fluid" style="padding-top:10px;">
	<span class="layui-breadcrumb">
	  <a><cite>首页</cite></a>
	  <a><cite><%=data.menu2%></cite></a>
	</span>
    <!-- 右上角按钮 -->
        <div style="float:right;">
            <button class="layui-btn layui-btn-sm layui-btn-normal"  onclick="addDataFunc()">
                <i class="layui-icon">&#xe654;</i>
                添加
            </button>
        </div>

    <div class="layui-clear"></div>

    <blockquote class="layui-elem-quote layui-quote-nm " style="margin-top:1px;">
        <form class="layui-form BTNSHOW BTNSHOW_QUERY" action="javascript:;" id="query_condition">
            <div class="layui-form-item" style="margin-bottom:0;">
                <div class="layui-inline" style="width:100%">
                    <div class="searchbut">
                        <!-- <div class="butsure">
                                <label class="layui-form-label">查询条件：</label>
                             </div> -->
                        <div id="condition_class" class="layui-inline">
                            <% for(var i = 0;i < data.schema.length;i++){  var s = data.schema[i]; %>
                            <div class="layui-input-inline">
                                <input type="text" name="<%= s.key %>" id="<%= s.key %>-id" defaultmsg="<%= s.value %>"
                                       placeholder="<%= s.value %>" lay-filter='<%= s.key %>' class="layui-input"
                                       condition=""/>
                            </div>
                            <% } %>
                            <div class="layui-input-inline" id="searchbutton">
                                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="queryData">
                                    <i class="layui-icon ">&#xe615</i>
                                </button>
                                <button class="layui-btn layui-btn-normal" id="Reload">
                                    <i title="刷新" class="layui-icon ">&#xe669</i>
                                </button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </blockquote>

    <!--主题表格数据开始-->
    <table id="tabledata" lay-filter="test"></table>

    <div class="layui-tab-item">
        <div id="pageDemo"></div>
    </div>
</div>

<!--编辑表格弹出层开始-->
<form id="form_edit" class="layui-form" style=" display:none;margin-top:30px;" action="">
    <input type="hidden" id="id" name="id" autocomplete="off" class="layui-input">
    <% for(var i = 0;i < data.schema.length;i += 2){  var s1 = data.schema[i];var s2 = data.schema[i + 1]; %>
    <div class="layui-form-item">
        <% if(s1){ %>
            <label class="layui-form-label"><%= s1.value %></label>
            <div class="layui-input-inline">
                <input type="text" name="<%= s1.key %>" id="<%= s1.key %>_edit"
                       class="layui-input"  placeholder="<%= s1.value %>"/>
            </div>
        <% } %>
        <% if(s2){ %>
            <label class="layui-form-label">
<!--                <span style="color:red;">*</span>-->
                <%= s2.value %></label>
            <div class="layui-input-inline">
                <input type="text" name="<%= s2.key %>" id="<%= s2.key %>_edit"
                       class="layui-input"  placeholder="<%= s2.value %>"/>
            </div>
        <% } %>
    </div>
    <% } %>

    <div class="layui-form-item" id="bntgroup">
        <div class="from_but">
            <button class="layui-btn layui-btn-normal" id="queryCondBtn" lay-submit lay-filter="editInfo">提交</button>
        </div>
    </div>
</form>


<script src="/assets/lib/jquery/jquery-3.2.1.min.js"></script>
<script src="/assets/js/app.js"></script>
<script src="/assets/js/common/range.js"></script>
<script src="/assets/lib/viewer/viewer.min.js"></script>
<script src="/assets/js/common/validate.js"></script>
<script src="/assets/lib/layui/layui.all.js"></script>
<script src="<%= data.jsPath %>"></script>
</body>
</html>